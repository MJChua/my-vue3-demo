@import './reset.styl'

body
  font-family $body-font-sans-serif

#app
  height 100%
  scroll-behavior smooth

// main page frame
main
  width 100%
  min-height 100%
  display flex
  flex-direction column
  position relative

.container
  --gutter-x 12px
  --gutter-y 16px
  width 100%
  padding calc(var(--gutter-y) * 1) calc(var(--gutter-x) * 1)
  margin-left auto
  margin-right auto
  max-width $container-max-width-lg // 960PX
  &-md
    max-width $container-max-width-md // 720PX
  &-sm
    max-width $container-max-width-sm // 540PX
  &-xs
    max-width $container-max-width-xs // 460PX

// # row | col
.row
  --gutter-x $gutter-x
  --gutter-y $gutter-y
  display flex
  flex-wrap wrap
  align-items center
  margin-top calc(var(--gutter-y) * -1)
  margin-left calc(var(--gutter-x) * -0.5)
  margin-right calc(var(--gutter-x)* -0.5)
  > *
    flex-shrink 0
    max-width 100%
    margin-top var(--gutter-y)
    padding-left calc(var(--gutter-x) * 0.5)
    padding-right calc(var(--gutter-x) * 0.5)

// 自訂 col
.col-auto
  flex 0 0 auto
  width auto

/** margin | padding */
for space in $spaces
  .m-{space}
    margin (space * 1px) !important
  .mt-{space}
    margin-top (space * 1px) !important
  .mr-{space}
    margin-right (space * 1px) !important
  .mb-{space}
    margin-bottom (space * 1px) !important
  .ml-{space}
    margin-left (space * 1px) !important
  .mx-{space}
    margin-left (space * 1px) !important
    margin-right (space * 1px) !important
  .my-{space}
    margin-top (space * 1px) !important
    margin-bottom (space * 1px) !important

  .p-{space}
    padding (space * 1px) !important
  .pt-{space}
    padding-top (space * 1px) !important
  .pr-{space}
    padding-right (space * 1px) !important
  .pb-{space}
    padding-bottom (space * 1px) !important
  .pl-{space}
    padding-left (space * 1px) !important
  .px-{space}
    padding-left (space * 1px) !important
    padding-right (space * 1px) !important
  .py-{space}
    padding-top (space * 1px) !important
    padding-bottom (space * 1px) !important

.mx-auto
  margin-left auto !important
  margin-right auto !important

for size in $sizes
  .fz-{size}
    font-size (size)px

for weight in $weights
  .fw-{weight}
    font-weight weight

b
  font-weight 600

strong
  font-weight 700

// text align
.text-center
  text-align center

.text-left
  text-align left

.text-right
  text-align right