:root {
  --white #fff
  --white-50-percent rgba(255, 255, 255, 0.5)
  --black #000
  --black-70-percent rgba(0, 0, 0, 0.7)
}

// primary
$primary_normal_color = #7771d7
$primary_dark_color = #504b9c

// neutral
$neutral_normal_color = #526377
$neutral_light_color = #97A4B0
$neutral_line_in_white_color = #E8EBED

/* 區塊背景 */
// fill
$multilingual_fill_background = #F2F3F7

@media (prefers-color-scheme: dark) {
  :root {
    /* 基本色 */
    --white #000000
    --white-50-percent rgba(0, 0, 0, 0.5)
    --black #FFFFFF
    --black-70-percent rgba(255, 255, 255, 0.7)

    /* 4. Neutral */
    --neutral-normal #97A4B0
    --neutral-light #526377
    --neutral-lighter #4C5763
    --neutral-dark #B4BDC5
    --neutral-line-in-gray #4C505D
    --neutral-line-in-white #5F6B7B

    /* 5. Fill */
    --normal-background #323232
    --info-background #383A3D

    /* background **/
    --bottom-popup-background #151516
    --content-background #434343
    --message-background #212121
    --list-block-background #1C1C1E
    --index-center-background linear-gradient(291deg, #000000 99%, #171717 1%)

    /* 陰影顏色 **/
    --outer-01 rgba(11, 11, 11, 0.15)
    --outer-02 #26282b
    --announcement-shadow-outer rgba(29, 30, 32, 0.5)

    /* 自行定義 **/
    --tab-background linear-gradient(to top, #4e4e4e, #696969 33%, #6c6c6c 33%)
    --top-background-gradient linear-gradient(to bottom, #3b3b3b, #2a2a2a 12%, #323232), linear-gradient(to bottom, #4d4d4d, #323232)
    --card-gradient linear-gradient(to bottom, #383838 2%, #3f3f3f 60%, #353535 95%, #404040)
    --app-download-background linear-gradient(to bottom, #17191a, rgba(33, 29, 29, 0))
    --mine-background linear-gradient(357deg, #3A334D 1%, #30424F 99%)
    --switch-button #787880
    --van-picker-mask linear-gradient(180deg, hsla(240, 3%, 8%, .9), hsla(240, 3%, 8%, .4)), linear-gradient(180deg, hsla(240, 3%, 8%, .9), hsla(240, 3%, 8%, .4))
    --error-page-gradient-background linear-gradient(to bottom, #443d46 -1%, #413b46 4%, rgba(47, 46, 52, 0.42) 39%, rgba(3, 4, 4, 0) 76%)
    --sub-game-background linear-gradient(to top, #242c34, rgba(36, 44, 52, 0))
    --breadcrumb-background linear-gradient(to bottom, #383838 2%, #272728 14%, #383838 100%)
  }
}

.light-mode{
  /* 基本色 */
  --white #FFFFFF
  --white-50-percent rgba(255, 255, 255, 0.5)
  --black #000000
  --black-30-percent rgba(0, 0, 0, 0.3)
  --white-80-percent rgba(#fff, 0.8)
  --white-80-percent-header linear-gradient(to bottom, var(--white), var(--white-80-percent))
  --white-footer linear-gradient(to bottom, var(--neutral-line-in-gray), var(--neutral-line-in-white))

  /* 1. Main **/
  /* 主色 */
  --main-color #7771d7

  /* 漸層、按鈕 */
  --primary-gradient radial-gradient(circle at 7% 11%, #2cd8d5, #6b8dd6 40%, #8e37d7 92%)
  --secondary-gradient radial-gradient(circle at 9% 14%, #ffd957, #fb8e5c 40%,#d73737 92%)
  --promo-background linear-gradient(67deg, #f89b17 1%, #f2306d 67%)

  /* 2. Page **/
  /* 內容主色 */
  --primary-normal #3590EC
  --primary-light #65B3F3
  --primary-lighter #7198D1
  --primary-lighter-30-percent rgba(#7198D1, .3)
  --primary-background #E6EFF6
  --primary-dark #2670CA
  --primary-darker #1A53A9


  /* 次要按鈕 */
  --primary-light-button linear-gradient(to bottom, #eaf4ff, #eef3f9)

  /* 4. Neutral */
  --neutral-normal #526377
  --neutral-light #97A4B0
  --neutral-lighter #B4BDC5
  --neutral-dark #3B434C
  --neutral-line-in-gray #D2D7E6
  --neutral-line-in-white #E8EBED
  --neutral-disabled #E3E6F1

  /* 5. Fill */
  --normal-background #F2F3F7
  --info-background #F0F3F8

  /* background **/
  --bottom-popup-background #FFFEFE
  --content-background #E6EFF6
  --message-background #FBFBFB
  --list-block-background #FEFEFE
