  /* 陰影顏色 **/
  --inner-01 rgba(113, 152, 209, 0.3)
  --outer-01 rgba(130, 137, 145, 0.15)
  --outer-02 #d5e0f1
  --announcement-shadow-outer rgba(184, 186, 198, 0.5)

  /* 自行定義 **/
  --multilingual-primary-gradient-purple linear-gradient(100deg, #ff5c9d 3%, #3a68ff 96%)
  --tab-background linear-gradient(to bottom, #ffffff 2%, #f2f2f6 88%, #ffffff)
  --top-background-gradient linear-gradient(to bottom, #f8f9ff, rgba(255, 255, 255, 0.88) 12%, #ffffff), linear-gradient(to bottom, #ffffff, rgba(255, 255, 255, 0))
  --card-gradient linear-gradient(to bottom, #ffffff 2%, #fefefe 60%, #f3f3f7 95%, #ffffff)
  --app-download-background linear-gradient(to bottom, #dbf0ff, rgba(255, 255, 255, 0))
  --mine-background linear-gradient(357deg, #e4e0f8 1%, #ddeaf9 99%)
  --switch-button rgba(120, 120, 128, 0.16)
  --van-picker-mask linear-gradient(180deg,hsla(360, 100%, 100%, .9), hsla(360, 100%, 100%, .4)), linear-gradient(180deg,hsla(360, 100%, 100%, .9), hsla(360, 100%, 100%, .4))
  --van-toast-text-color var(--black)
  --error-page-gradient-background linear-gradient(to bottom, #f3ebf7 -1%, #f5ebfd 4%, rgba(226, 221, 244, 0.42) 39%, rgba(247, 251, 255, 0) 76%)
  --sub-game-background linear-gradient(to top, #ffffff, rgba(255, 255, 255, 0))
  --breadcrumb-background linear-gradient(to bottom, #ffffff 2%, #f2f2f6 14%, #ffffff)
}

